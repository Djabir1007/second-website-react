{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    "strict": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,

    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src"]
}
